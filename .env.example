# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_USERS=123456789,987654321
TELEGRAM_ALLOWED_CHATS=-1001234567890,-1009876543210

# AI Provider Configuration
AI_PROVIDER=openai  # or anthropic
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Storage Configuration
STORAGE_PRIMARY=notion  # or obsidian

# Notion Configuration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=/path/to/your/vault
OBSIDIAN_DAILY_NOTES=true
OBSIDIAN_FOLDER_STRUCTURE=Inbox/{category}

# Processing Configuration
QUEUE_BACKEND=redis
REDIS_URL=redis://localhost:6379
WORKER_CONCURRENCY=3
PROCESSING_TIMEOUT=300

# Feature Flags
FEATURE_AUTO_SUMMARIZE=true
FEATURE_AUTO_CLASSIFY=true
FEATURE_SMART_REPLY=true
FEATURE_CONTENT_EXTRACTION=true
FEATURE_OCR_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=optional_sentry_dsn_here